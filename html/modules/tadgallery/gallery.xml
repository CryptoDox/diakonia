<?xml version="1.0" encoding="UTF-8"?>
	<gallery>
		<config>
			<title>[web_title]</title>
			<thumbnail_dir>[xoops_url]/uploads/tadgallery/small/</thumbnail_dir>
			<image_dir>[xoops_url]/uploads/tadgallery/medium/</image_dir>
			<slideshow_interval>5</slideshow_interval>
			<pause_slideshow>false</pause_slideshow>
			<rss_scale_images>true</rss_scale_images>
			<background_music>[xoops_url]/uploads/tadgallery/mp3/[mp3]</background_music>
			<background_music_volume>50</background_music_volume>
			<link_images>true</link_images>
			<disable_printscreen>false</disable_printscreen>
			<disable_titles>false</disable_titles>
		</config>
		
		<albums>
			[album]
		</albums>

		<!--  language support added in v 1.0b	-->
		<language>
			<string id="please wait" value="請稍等" />
			<string id="loading" value="載入中" />
			<string id="previous page" value="上一頁" />
			<string id="page % of %" value="Page % of %" />
			<string id="next page" value="下一頁" />
		</language>

	</gallery>